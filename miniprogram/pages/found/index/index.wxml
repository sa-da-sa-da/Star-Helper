<!--pages/found/index/index.wxml-->
<cu-custom bgColor="bg-blue">
	<view slot="content">
		Star 教技
	</view>
	<view slot="right">
		<view class="action">
			<navigator url="/pages/user/sign/index" hover-class="none">
				<image class="cuIcon-yiqiandao" bindtap="BackPage"></image>
			</navigator>
		</view>
	</view>
</cu-custom>
<scroll-view scroll-x class="bg-white nav" scroll-with-animation scroll-left="{{scrollLeft}}">
	<view class="cu-item {{index==TabCur?'text-green cur':''}}" wx:for="{{10}}" wx:key="_id" bindtap="tabSelect"
		data-id="{{index}}">
		Tab{{index}}
	</view>
</scroll-view>
<view wx:for="{{10}}" wx:key="_id" wx:if="{{index==TabCur}}">
	<view class="cu-card article {{isCard?'no-card':''}}">
		<view class="cu-item shadow">
			<view class="title">
				<view class="text-cut">无意者 烈火焚身;以正义的烈火拔出黑暗。我有自己的正义，见证至高的烈火吧。</view>
			</view>
			<view class="content">
				<image src="https://ossweb-img.qq.com/images/lol/web201310/skin/big10006.jpg" mode="aspectFill"></image>
				<view class="desc">
					<view class="text-content"> 折磨生出苦难，苦难又会加剧折磨，凡间这无穷的循环，将有我来终结！真正的恩典因不完整而美丽，因情感而真诚，因脆弱而自由！</view>
					<view>
						<view class="cu-tag bg-red light sm round">正义天使</view>
						<view class="cu-tag bg-green light sm round">史诗</view>
					</view>
				</view>
			</view><text>\n</text>
			<view class="text-gray text-sm text-right">
				<view class="cu-tag bg-blue light text-left sm radius">来源</view>
				<text class="cuIcon-timefill margin-lr-xs">2020-01-29</text> 
				<text class="cuIcon-attentionfill margin-lr-xs">100</text> 
				<text class="cuIcon-appreciatefill margin-lr-xs">200</text> 
				<text class="cuIcon-messagefill margin-lr-xs">300</text>
			</view>
		</view>
	</view>

	<!-- 底部提示&Action -->
	<view style="padding-bottom: calc(env(safe-area-inset-bottom)/2);" wx:if="{{!loding}}">
		<view class="solid-bottom text-sm text-center">
			<text class="text-grey text-center">到底啦，更多文章请查看其他模块</text>
		</view>
	</view>
</view>
<!--悬浮搜索-->
<view class="search bg-blue light" bindtap="jump_to_search" data-url="search/index">
	<view class="cuIcon-search" />
</view>
<!--快捷置顶-->
<floatbut backTop="{{backTop}}"></floatbut>